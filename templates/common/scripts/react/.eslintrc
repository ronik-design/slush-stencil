{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "rules": {
        "no-underscore-dangle": false,
        "quotes": [1, "single"],
        "strict": [2, "global"],
        "semi": [1, "always"],
        "new-cap": false,
        "dot-notation": false,
        "max-len": [1, 120, 4],
        "no-unused-vars": [1, {"vars": "all", "args": "after-used"}],
        "no-alert": false,
        "react/jsx-uses-vars": 1
    },
    "ecmaFeatures": {
        "modules": true,
        "jsx": true
    },
    "globals": {
        "__DEV__": true,
        "File": true
    },
    "plugins": [
        "react"
    ]
}
